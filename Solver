		}
	}

	public ArrayList findRoute(Graph g) {

	}

	public ArrayList findClosestCenter(ArrayList nodes, ArrayList centers) {
		
		ArrayList<ArrayList> whichCenter = new ArrayList<ArrayList>();

		for (int n = 0; n < nodes.size; n ++ ) {
			ArrayList<Node> temp = new ArrayList<Node>();
			Node centToAdd = centers.get(0);
			for (int i = 1; i < centers.size(); i ++ ) {
				if (centers.get(i).distanceToNode(n) > centToAdd) {
					centToAdd = centers.get(i);
					temp.add(centToAdd);
				}		
			}
			
			whichCenter.add(temp);
		}
	}

}
